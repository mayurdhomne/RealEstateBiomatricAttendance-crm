<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_large">

                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dashboard"
                    android:textColor="@color/navy_primary"
                    android:textSize="@dimen/text_size_headline"
                    android:fontFamily="@font/roboto_bold"
                    android:contentDescription="Dashboard title" />

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressBar"
                    android:layout_width="@dimen/progress_indicator_size"
                    android:layout_height="@dimen/progress_indicator_size"
                    android:visibility="gone"
                    app:indicatorColor="@color/gold_primary"
                    app:trackColor="@color/progress_track" />

            </LinearLayout>

            <!-- Attendance Overview Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin_large">

                <!-- Days Present Card -->
                <androidx.cardview.widget.CardView
                    style="@style/Widget.App.CardView"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dashboard_card_height"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_small"
                    app:cardBackgroundColor="@color/navy_primary"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Days present card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/padding_medium">

                        <TextView
                            android:id="@+id/tvDaysPresent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/text_on_primary"
                            android:textSize="@dimen/text_size_display"
                            android:fontFamily="@font/roboto_bold"
                            android:contentDescription="Number of days present" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Days Present"
                            android:textColor="@color/text_on_primary"
                            android:textSize="@dimen/text_size_small"
                            android:fontFamily="@font/roboto_medium"
                            android:textAlignment="center" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Last Check-in Card -->
                <androidx.cardview.widget.CardView
                    style="@style/Widget.App.CardView"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dashboard_card_height"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_small"
                    app:cardBackgroundColor="@color/gold_primary"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Last check-in card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/padding_medium">

                        <TextView
                            android:id="@+id/tvLastCheckIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--:--"
                            android:textColor="@color/text_on_accent"
                            android:textSize="@dimen/text_size_extra_large"
                            android:fontFamily="@font/roboto_bold"
                            android:contentDescription="Last check-in time" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Check-in"
                            android:textColor="@color/text_on_accent"
                            android:textSize="@dimen/text_size_small"
                            android:fontFamily="@font/roboto_medium"
                            android:textAlignment="center" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Attendance Chart Card -->
            <androidx.cardview.widget.CardView
                style="@style/Widget.App.CardView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dashboard_chart_height"
                android:layout_margin="10dp"
                android:layout_marginBottom="@dimen/margin_large"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Attendance overview chart">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attendance Overview"
                        android:textColor="@color/navy_primary"
                        android:textSize="@dimen/text_size_extra_large"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:contentDescription="Attendance overview section title" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChart"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Leave Information Card -->
            <androidx.cardview.widget.CardView
                style="@style/Widget.App.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Leave information card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leave Information"
                        android:textColor="@color/navy_primary"
                        android:textSize="@dimen/text_size_extra_large"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:contentDescription="Leave information section title" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Sick Leaves -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/padding_medium"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="Sick leaves information">

                            <ImageView
                                android:layout_width="@dimen/icon_size_large"
                                android:layout_height="@dimen/icon_size_large"
                                android:src="@drawable/stethoscope"
                                android:layout_marginBottom="@dimen/margin_small"
                                app:tint="@color/navy_primary" />

                            <TextView
                                android:id="@+id/tvSickLeaves"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/navy_primary"
                                android:textSize="@dimen/text_size_title"
                                android:fontFamily="@font/roboto_bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sick Leaves"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_small"
                                android:fontFamily="@font/roboto_medium"
                                android:textAlignment="center" />

                        </LinearLayout>

                        <!-- Other Leaves -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/padding_medium"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="Other leaves information">

                            <ImageView
                                android:layout_width="@dimen/icon_size_large"
                                android:layout_height="@dimen/icon_size_large"
                                android:src="@drawable/ic_leave"
                                android:layout_marginBottom="@dimen/margin_small"
                                app:tint="@color/gold_primary" />

                            <TextView
                                android:id="@+id/tvOtherLeaves"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/navy_primary"
                                android:textSize="@dimen/text_size_title"
                                android:fontFamily="@font/roboto_bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Other Leaves"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_small"
                                android:fontFamily="@font/roboto_medium"
                                android:textAlignment="center" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="@dimen/fab_margin">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCheckIn"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Check In"
                    android:textAllCaps="false"
                    android:paddingStart="@dimen/padding_large"
                    android:paddingEnd="@dimen/padding_large"
                    app:icon="@drawable/ic_fingerprint"
                    app:iconSize="24dp"
                    android:padding="10dp"
                    app:iconGravity="textStart"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/success_green"
                    android:contentDescription="Check in button" />

                <View
                    android:layout_width="16dp"
                    android:layout_height="wrap_content" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCheckOut"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Check Out"
                    android:textAllCaps="false"
                    android:paddingStart="@dimen/padding_large"
                    android:paddingEnd="@dimen/padding_large"
                    app:icon="@drawable/ic_fingerprint"
                    app:iconSize="24dp"
                    android:padding="10dp"
                    app:iconGravity="textStart"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/error_red"
                    android:contentDescription="Check out button" />
            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Take Attendance Button -->

</androidx.coordinatorlayout.widget.CoordinatorLayout>