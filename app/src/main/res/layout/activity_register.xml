<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvBiometricRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Biometric Registration"
                android:textColor="@color/colorAccent"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Complete your onboarding by registering your biometrics"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/tvBiometricRegistration"
                app:layout_constraintStart_toStartOf="@+id/tvBiometricRegistration"
                app:layout_constraintTop_toBottomOf="@+id/tvBiometricRegistration" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSubtitle">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- Progress Indicator -->
                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/registrationProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:indicatorColor="@color/colorPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Progress Text -->
                    <TextView
                        android:id="@+id/tvProgressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Registration Progress: 0%"
                        android:textColor="@color/colorAccent"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/registrationProgress" />

                    <!-- Instructions -->
                    <TextView
                        android:id="@+id/tvInstructions"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Step 1: Register your face for attendance"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvProgressText" />

                    <!-- Face Registration Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnScanFaceID"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="24dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="Register Face"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/ic_face"
                        app:iconGravity="textStart"
                        app:iconSize="24dp"
                        app:iconTint="@android:color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvInstructions" />

                    <!-- Fingerprint Registration Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnScanFingerprintID"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="@android:color/darker_gray"
                        android:text="Register Fingerprint"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/ic_fingerprint"
                        app:iconGravity="textStart"
                        app:iconSize="24dp"
                        app:iconTint="@android:color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btnScanFaceID" />

                    <!-- Registration Info -->
                    <TextView
                        android:id="@+id/tvRegistrationInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Both face and fingerprint registration are required for attendance tracking"
                        android:textAlignment="center"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btnScanFingerprintID" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:text="Need to login again? Go to Login"
                app:layout_constraintEnd_toEndOf="@+id/cardView"
                app:layout_constraintStart_toStartOf="@+id/cardView"
                app:layout_constraintTop_toBottomOf="@+id/cardView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
