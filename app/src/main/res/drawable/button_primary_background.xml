<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/navy_dark" />
            <corners android:radius="@dimen/button_corner_radius" />
            <stroke android:width="1dp" android:color="@color/navy_light" />
        </shape>
    </item>
    
    <!-- Focused State -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/navy_primary" />
            <corners android:radius="@dimen/button_corner_radius" />
            <stroke android:width="2dp" android:color="@color/gold_primary" />
        </shape>
    </item>
    
    <!-- Disabled State -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_disabled" />
            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>
    
    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/navy_primary" />
            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>
    
</selector>