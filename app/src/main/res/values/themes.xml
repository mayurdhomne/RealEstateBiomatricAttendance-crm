<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with Material Design 3 and Navy/Gold theme -->
    <style name="Base.Theme.RealEstaateBiomatricAttendance" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/navy_primary</item>
        <item name="colorPrimaryVariant">@color/navy_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/gold_primary</item>
        <item name="colorSecondaryVariant">@color/gold_dark</item>
        <item name="colorOnSecondary">@color/navy_primary</item>
        
        <!-- TextAppearance styles -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.App.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.App.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.App.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.App.Headline4</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.App.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.App.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.App.Overline</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- System UI colors -->
        <item name="android:statusBarColor">@color/navy_primary</item>
        <item name="android:navigationBarColor">@color/navy_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Window properties -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        
        <!-- Material Design 3 shape system -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.App.LargeComponent</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.App.Button.Outlined</item>
        
        <!-- Text input styles -->
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        
        <!-- Card styles -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        
        <!-- FAB styles -->
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>
    </style>
    <!-- Window Animation Transitions -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_left</item>
    </style>
    
    <!-- Shape Appearances -->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/button_corner_radius</item>
    </style>
    
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/card_corner_radius</item>
    </style>
    
    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/button_corner_radius_large</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="backgroundTint">@color/navy_primary</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:stateListAnimator">@animator/button_state_animator</item>
    </style>
    
    <style name="Widget.App.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/navy_primary</item>
        <item name="strokeColor">@color/navy_primary</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="Widget.App.Button.Gold" parent="Widget.App.Button">
        <item name="android:textColor">@color/text_on_accent</item>
        <item name="backgroundTint">@color/gold_primary</item>
    </style>
    
    <!-- Text Input Layout Styles -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/inputStrokeColor</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_field_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_field_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_field_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_field_corner_radius</item>
    </style>
    
    <!-- Card View Styles -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="android:stateListAnimator">@animator/card_state_animator</item>
    </style>
    
    <!-- FloatingActionButton Styles -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/gold_primary</item>
        <item name="tint">@color/navy_primary</item>
        <item name="elevation">@dimen/card_elevation</item>
        <item name="pressedTranslationZ">@dimen/card_elevation_pressed</item>
    </style>
    
    <!-- Progress Bar Styles -->
    <style name="Widget.App.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">@color/gold_primary</item>
        <item name="trackColor">@color/progress_track</item>
        <item name="indicatorSize">@dimen/progress_indicator_size</item>
    </style>
    
    <style name="AdvancedProgressBar">
        <item name="android:progressDrawable">@drawable/progress_bar_advanced</item>
        <item name="android:progressTint">@color/gold_primary</item>
        <item name="android:progressBackgroundTint">@color/progress_track</item>
    </style>
    
    <!-- Bottom Sheet Styles -->
    <style name="BottomSheetTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="shapeAppearanceOverlay">@style/CustomBottomSheetShape</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
    </style>

    <style name="CustomBottomSheetShape" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSize">@dimen/card_corner_radius_large</item>
        <item name="cornerSizeTopLeft">@dimen/card_corner_radius_large</item>
        <item name="cornerSizeTopRight">@dimen/card_corner_radius_large</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    
    <!-- Loading Dialog Style -->
    <style name="LoadingDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@drawable/loading_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="Theme.RealEstaateBiomatricAttendance" parent="Base.Theme.RealEstaateBiomatricAttendance" />
</resources>